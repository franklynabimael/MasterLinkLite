@page
@model MasterLinkLite.Pages.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<h2>Crear cuenta</h2>

<form method="post">
    <div>
        <label>Usuario:</label>
        <input asp-for="NombreUsuario" required />
    </div>
    <div>
        <label>Contraseña:</label>
        <input asp-for="Password" type="password" required />
    </div>
    <button type="submit">Registrarse</button>

    @if (!string.IsNullOrEmpty(Model.Mensaje))
    {
        <p style="color:red">@Model.Mensaje</p>
    }
</form>
