@page
@model MasterLinkLite.Pages.RegisterModel
@{
    ViewData["Title"] = "Registro";
}

<div class="auth-container">
    <h2 class="auth-title">Crear Cuenta</h2>

    @if (!string.IsNullOrEmpty(Model.Mensaje))
    {
        <div class="alert alert-danger">@Model.Mensaje</div>
    }

    <form method="post">
        <div class="mb-3">
            <label asp-for="NombreUsuario" class="form-label">Usuario</label>
            <input asp-for="NombreUsuario" class="form-control" />
            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="Password" class="form-label">Contraseña</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="d-grid">
            <button type="submit" class="btn btn-auth">Registrarme</button>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
