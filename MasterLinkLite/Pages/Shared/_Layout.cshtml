@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var usuario = HttpContextAccessor.HttpContext.Session.GetString("usuario");
    var path = Context.Request.Path.Value?.ToLower();

}
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MasterLinkLite</title>

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MasterLinkLite.styles.css" asp-append-version="true" />

</head>
<body>
    <header>
        @if (!(ViewData["OcultarNavbar"] as bool? ?? false))
        {
            <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: var(--magenta);">
                <div class="container position-relative">
                    <div class="w-100 d-flex justify-content-center">
                        <a class="navbar-brand fw-bold text-white" asp-area="" asp-page=/Index>MasterLink</a>
                    </div>
                    <div class="position-absolute end-0 top-50 translate-middle-y">
                        <a class="btn btn-outline-light" asp-page=/Admin/Links title="Editar">
                            Editar
                        </a>
                    </div>
                </div>
            </nav>
        }
    </header>

    <div class="container mt-4">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
