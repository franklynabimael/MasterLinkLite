@section Scripts {
    <script>
        let eliminarForm = document.getElementById('eliminarForm');
        let confirmarEliminarModal = document.getElementById('confirmarEliminarModal');
        let linkIdToDelete = null;

        // Cuando se abre el modal, configurar el form con el id correcto
        confirmarEliminarModal.addEventListener('show.bs.modal', function (event) {
            var button = event.relatedTarget;
            linkIdToDelete = button.getAttribute('data-link-id');
            eliminarForm.action = '?handler=Eliminar&id=' + linkIdToDelete;
        });
    </script>
}
