@page
@model MasterLinkLite.Pages.Admin.LinkProgramModel
@{
    ViewData["Title"] = "Administrador de Programas";
    ViewData["OcultarNavbar"] = true;
}

<div class="container mt-4">
    <h4 class="mb-4 text-center fw-bold">Administrar Programas</h4>

    @if (Model.ModoEdicion)
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Editar Programa</h5>
                <form method="post" asp-page-handler="GuardarEdicion">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input asp-for="Editar.Nombre" class="form-control" placeholder="Nombre" required />
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Editar.Url" class="form-control" placeholder="URL" required />
                        </div>
                    </div>
                    <input type="hidden" asp-for="Editar.Id" />
                    <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-primary">Guardar cambios</button>
                        <a href="?" class="btn btn-secondary">Cancelar</a>
                    </div>
                </form>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm mb-4">
            <div class="card-body">
                <h5 class="card-title">Agregar Programa</h5>
                <form method="post">
                    <div class="row g-3">
                        <div class="col-md-6">
                            <input asp-for="Nuevo.Nombre" class="form-control" placeholder="Nombre" required />
                        </div>
                        <div class="col-md-6">
                            <input asp-for="Nuevo.Url" class="form-control" placeholder="URL" required />
                        </div>
                    </div>
                    <div class="mt-3">
                        <a href=/home class="btn btn-warning" style="color: #FFF">Inicio</a>
                        <button type="submit" class="btn btn-success">Agregar</button>
                        
                    </div>
                </form>
            </div>
        </div>
    }

    <hr />
    <input type="text" id="filtro" class="form-control mb-4" placeholder="Buscar Programa" onkeyup="filtrarTabla()" />

     <table class="table table-bordered table-hover align-middle">
        <thead class="table-light">
            <tr>
                <th>Nombre</th>
                <th>URL</th>
                <th>Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var x in Model.MisProgramas)
            {
                <tr>
                    <td>@x.Nombre</td>
                    <td>
                        <a href="@x.Url" target="_blank">@x.Url</a>
                    </td>
                    <td>
                        <div class="d-flex gap-2" role="group">
                            <a href="?editarId=@x.Id" class="btn btn-warning btn-sm">Editar</a>
                            <button type="button" class="btn btn-danger btn-sm" data-bs-toggle="modal" data-bs-target="#confirmarEliminarModal" data-link-id="@x.Id">
                                Eliminar
                            </button>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Modal -->
<div class="modal fade" id="confirmarEliminarModal" tabindex="-1" aria-labelledby="confirmarEliminarModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form id="eliminarForm" method="post">
                <div class="modal-header">
                    <h5 class="modal-title" id="confirmarEliminarModalLabel">Confirmar eliminación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                </div>
                <div class="modal-body">
                    ¿Está seguro que desea Eliminar?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="submit" class="btn btn-danger">Eliminar</button>
                </div>
            </form>
        </div>
    </div>
</div>


